<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
       <bean class="in.sp.beans.Address" id ="addId">
    	<property name="houseNo" value="69"/>
    	<property name="city" value="Delhi"/>
    	<property name="pincode" value="262005"/>
    
    
    </bean>
    
    
    <bean class="in.sp.beans.Student" id ="stId">
    	<property name="name" value="Deepak"/>
    	<property name="rollNo" value="101"/>
    	<property name="address" ref="addId"/>
    
    
    </bean>

</beans>
